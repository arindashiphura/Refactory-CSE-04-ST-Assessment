doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Flight Booking Form
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css' rel='stylesheet')
  link(rel='stylesheet' href='/css/form .css')
.container.form-container
  // Header Image
  img.header-img(src='/img/Header.PNG' alt='Flight Booking Header')
  // Add id="flightBookingForm" to the form
  form#flightBookingForm(novalidate='' action='flightForm' method='POST')
    .row
      // Passenger Information
      .col-md-4
        .form-section
          h3 PASSENGER INFORMATION
          .mb-3
            label.form-label(for='fullName') Full Name *
            input#fullName.form-control(type='text' name='fullName')
            .invalid-feedback Full Name is required.
          .mb-3
            label.form-label(for='gender') Gender *
            select#gender.form-select(required='')
              option(value='') -- Select --
              option(value='Male') Male
              option(value='Female') Female
              option(value='Other') Other
            .invalid-feedback Gender is required.
          .mb-3
            label.form-label(for='dob') Date of Birth *
            input#dob.form-control(type='date' name="dob")
            .invalid-feedback Date of Birth is required.
          .mb-3
            label.form-label(for='nationality') Nationality *
            input#nationality.form-control(type='text' required='')
            .invalid-feedback Nationality is required.
      // Contact Information
      .col-md-4
        .form-section
          h3 CONTACT INFORMATION
          .mb-3
            label.form-label(for='phoneNumber') Phone Number *
            input#phoneNumber.form-control(type='tel' name='phoneNumber')
            .invalid-feedback Phone Number is required and must be 10 digits.
          .mb-3
            label.form-label(for='emailAddress') Email Address *
            input#emailAddress.form-control(type='email' name="emailAdress")
            .invalid-feedback A valid Email Address is required.
          .mb-3
            label.form-label(for='poBox') P.O. BOX Number
            input#poBox.form-control(type='text' name="poBox")
          .mb-3
            label.form-label(for='emergencyPhone') Emergency Phone Number *
            input#emergencyPhone.form-control(type='tel' required='')
            .invalid-feedback Emergency Phone Number is required and must be 10 digits.
      // Flight Information
      .col-md-4
        .form-section
          h3 FLIGHT INFORMATION
          .mb-3
            label.form-label(for='passportNumber') Passport Number *
            input#passportNumber.form-control(type='text' name="passportNumber")
            .invalid-feedback Passport Number is required.
          .mb-3
            label.form-label(for='visaDocument') Visa Document *
            input#visaDocument.form-control(type='file' name="visaDocument")
            .invalid-feedback Visa Document is required.
          .mb-3
            label.form-label(for='departureCity') Departure City *
            input#departureCity.form-control(type='text' name="departureCity")
            .invalid-feedback Departure City is required.
          .mb-3
            label.form-label(for='destinationCity') Destination City *
            input#destinationCity.form-control(type='text' name="destinationCity")
            .invalid-feedback Destination City is required.
    // Submit Button
    .submit-btn
      button.btn.btn-danger(type='submit') SUBMIT
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js')
script.
  document.addEventListener("DOMContentLoaded", function () {
  const form = document.getElementById("flightBookingForm");
  form.addEventListener("submit", function (event) {
  if (!form.checkValidity()) {
  event.preventDefault();
  event.stopPropagation();
  }
  form.classList.add("was-validated");
  });
  });
